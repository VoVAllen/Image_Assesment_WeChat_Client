<!--index.wxml-->
<view class='main'>
  <view class="container" style='flex-direction: column;padding-top:300rpx'>
    <view class="image_placeholder">
      <image src='{{path}}' mode='aspectFill' style='width:100%;height:100%'></image>
    </view>
    <view class="upload_btn">
      <button loading="{{loading}}" class='deecamp' disabled='{{btn_disable}}' bindtap='upload_img'>{{btn_text}}</button>
    </view>
  </view>
</view>